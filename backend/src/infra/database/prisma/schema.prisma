generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  TEACHER
  COORDINATOR
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  type        Role     @default(STUDENT)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Evento {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  nome       String
  descricao  String
  status     String
}