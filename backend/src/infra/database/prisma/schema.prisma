// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  TEACHER
  COORDINATOR
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String   @unique
  type         Role     @default(STUDENT)
  email        String   @unique
  registration String
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}

model Group {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}


enum EventStatus {
  OPEN
  IN_PROGRESS
  CANCELED
  FINISHED
}


model Activity {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String
  maxTime     Int
  groupId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Event {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String
  name          String   @unique
  activityId    String
  startDate     DateTime
  status        EventStatus @default(OPEN)
  FrequencyList FrequencyList[] @relation(name: "Event")
  endDate       DateTime
  description   String
  autoFrequency Boolean
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}

type ActivitiesData {
  activityId     String
  hoursCompleted Int
}

model Report {
  id         String           @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  activities ActivitiesData[]
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @default(now())
}

type UsersList {
  userId   String
  attended Boolean
}

model FrequencyList {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  eventId   String      @db.ObjectId @unique
  Event         Event   @relation(name: "Event", fields: [eventId], references: [id])
  usersList UsersList[]
  teacherId String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @default(now())
}
